                                            input(type="radio" name="卒業見込み" value="卒業" id="graduate" v-model="picked")
                                            label(for="graduate") 卒業
                                .contentBox_table_block
                                    .contentBox_table_blockL
                                        h3 希望職種
                                        span *
                                    .contentBox_table_blockR
                                        label.select-wrap(data-target-focus='target' for="Jobcategory")
                                            select(name="希望職種" id="Jobcategory" class='select' v-model='select' v-on='change:onCheckSelect' v-validate='required')
