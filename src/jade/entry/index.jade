                                    .contentBox_table_blockL
                                        h3 生年月日
                                    .contentBox_table_blockR
                                        input(type="text" name="生年月日" id="birthday" class="text-field-s" maxlength="20" placeholder="" v-model="birthday")
                                .contentBox_table_block
                                    .contentBox_table_blockL
                                        h3 学校名
                                        span *
                                    .contentBox_table_blockR
